{% extends 'base.html.twig' %}

{% block body %}
    <div class="mt-6">
        <div class="uppercase font-bold">
            Emulate member
        </div>
        <form class="mt-6">
            <div class="flex justify-center gap-5">
                <select name="emulate-member" class="p-2 rounded bg-blue-200 w-40">
                    {% for member in members %}
                        <option value="{{ member.id }}">{{ member.name }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="bg-gray rounded p-2 bg-blue-200">
                    Emulate
                </button>
            </div>
        </form>
    </div>
{% endblock %}
